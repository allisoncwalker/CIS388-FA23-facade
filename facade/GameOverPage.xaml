<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="facade.GameOverPage"
             Title="GameOverPage">
    <VerticalStackLayout BackgroundColor="Grey">
        <Label
            x:Name="ResultLabel"
            Text="{Binding Result}"
            FontSize="50"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
            Padding="20, 100, 20, 100"
            FontFamily="Roboto-Regular"
            BackgroundColor="Red"
            TextColor="white"/>
        <Label
            BackgroundColor="#FACADE"
            Text="The Secret color was: #Facade"
            Padding="10, 20, 10, 20"
            Margin="10"
            FontSize="30"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center"
        />
        <Button
                Text="Try Again"
                BackgroundColor="#111"
                FontSize="Title"
                IsEnabled="false "
                TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>
